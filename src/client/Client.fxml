      </HBox>
      <Pane fx:id="Graph1" layoutX="385.0" layoutY="29.0" prefHeight="479.0" prefWidth="385.0">
         <children>
            <LineChart prefHeight="478.0" prefWidth="385.0">
              <xAxis>
                <CategoryAxis side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" />
              </yAxis>
            </LineChart>
         </children>
      </Pane>
   </children>
